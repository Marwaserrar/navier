      ansible_ssh_private_key_file: ~/.ssh/gcp_key
    worker1:
      ansible_host: ${instance_ips.node2}
      ansible_user: asmae
      ansible_ssh_private_key_file: ~/.ssh/gcp_key
    worker2:
      ansible_host: ${instance_ips.node3}
      ansible_user: asmae
      ansible_ssh_private_key_file: ~/.ssh/gcp_key
  children:
    control-plane:
      hosts:
        master:
    workers:
      hosts:
        worker1:
        worker2:
    etcd:
      hosts:
        master:
    k8s_cluster:
      children:
        control-plane:
        workers:
